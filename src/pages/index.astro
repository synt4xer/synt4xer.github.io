---
import Layout from "../layouts/Layout.astro";
import SocialIcon from "../components/SocialIcon.astro";

const socialLinks = [
  { platform: "github", url: "https://github.com/synt4xer" },
  { platform: "linkedin", url: "https://linkedin.com/in/ferreljf" },
  { platform: "instagram", url: "https://instagram.com/syntaxer_" },
  { platform: "telegram", url: "https://telegram.com/iferrelant" },
  { platform: "email", url: "mailto:f.syntaxer@gmail.com" },
];
---

<Layout title="Ferrel John Fernando | Software Engineer">
  <div class="max-w-2xl mx-auto text-center">
    <div class="mb-8">
      <img
        src="/images/profile.jpg"
        alt="Ferrel John Fernando"
        class="w-40 h-40 rounded-full mx-auto mb-4 object-cover"
      />
      <h1 class="text-3xl font-bold mb-2">Ferrel John Fernando</h1>
      <p class="text-gray-600 dark:text-gray-400 mb-6">
        Software Engineer & Tech Enthusiast
      </p>
      <p class="text-lg mb-8">
        Welcome to my corner of the internet! I write about web development,
        software engineering, and my journey in tech.
      </p>

      <div class="flex justify-center gap-4">
        {
          socialLinks.map(({ platform, url }) => (
            <SocialIcon platform={platform} url={url} />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
