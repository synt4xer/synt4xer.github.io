---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { calculateReadingTime } from "../../utils/calculateReadingTime";

export async function getStaticPaths() {
  const postEntries = await getCollection("posts");
  return postEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const readingTime = calculateReadingTime(entry.body);
---

<Layout title={entry.data.title}>
  <article class="prose dark:prose-invert max-w-3xl mx-auto">
    {
      entry.data.headerImage && (
        <div class="mb-8">
          <Image
            src={entry.data.headerImage}
            alt={entry.data.title}
            width={800}
            height={400}
            class="w-full h-[400px] object-cover rounded-lg"
            format="webp"
            loading="lazy"
          />
        </div>
      )
    }

    <div class="flex items-center gap-4 mb-6">
      <Image
        src="/images/profile.jpg"
        alt={entry.data.author}
        width={48}
        height={48}
        class="w-12 h-12 rounded-full object-cover"
        format="webp"
        loading="lazy"
      />
      <div>
        <div class="font-medium">{entry.data.author}</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <time datetime={entry.data.pubDate.toISOString()}>
            {
              entry.data.pubDate.toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </time>
          {readingTime && <span class="ml-2">Â· {readingTime} min read</span>}
        </div>
      </div>
    </div>

    <h1 class="text-4xl font-bold mb-4 leading-tight">{entry.data.title}</h1>
    {
      entry.data.description && (
        <p class="text-md text-gray-600 dark:text-gray-400 mb-8">
          {entry.data.description}
        </p>
      )
    }

    <div class="content">
      <Content />
    </div>
  </article>
</Layout>

<style is:global>
  .content {
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .content h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
  }

  .content h3 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content p {
    margin-bottom: 1.75rem;
  }

  .content a {
    color: #eb8317;
    text-decoration: underline;
  }

  .content pre {
    background-color: #1e1e1e;
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
    font-size: 0.875rem;
  }

  .content ul,
  .content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content blockquote {
    border-left: 4px solid #ffd700;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
  }
</style>
